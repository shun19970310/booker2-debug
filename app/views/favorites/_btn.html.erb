<!--books/showからの部分テンプレート-->
<% if book.favorited_by?(current_user) %>
  <!--method: :deleteとremote: trueの間に,を付ける→syntaxerrorが出た-->
  <%= link_to book_favorites_path(book), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= book.favorites.count %> いいね
  <% end %>
<% else %>
  <!--method: :postとremote: trueの間に,を付ける→syntaxerrorが出た-->
  <%= link_to book_favorites_path(book), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= book.favorites.count %> いいね
  <% end %>
<% end %>
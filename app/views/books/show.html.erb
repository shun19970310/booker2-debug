<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@books.user) do %>
            <%= image_tag @books.user.get_profile_image, size:"100x100" %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, @books %></td>
          <td><%= @books.body %></td>
           <% if @books.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success edit_book_#{@books.id}" %></td>
            <td><%= link_to 'Destroy', @books, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
           <% end %>
          <td>
           <% if current_user.already_favorited?(@books) %>
            <%= link_to  book_favorites_path(@books), method: :delete do %>
             <i class="fas fa-heart"></i>
            <% end %>
           <% else %>
            <%= link_to book_favorites_path(@books), method: :post do %>
             <i class="far fa-heart"></i>
            <% end %>
           <% end %>
           <%= @books.favorites.count %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <!--検索内容を、wordとしてアクションに送っています。-->
      <%= f.text_field :word %>
      <!--複数のモデルを検索できるように実装する為、UserモデルとBookモデルを選択できるようにし、選択したモデルをrangeとしてアクションに送る-->
      <%= f.select :range, options_for_select([['User'], ['Book']]) %>
      <!--選択した検索手法をsearchとしてアクションに送る-->
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backword_match"], ["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>